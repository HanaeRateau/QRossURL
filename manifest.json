{

  "manifest_version": 2,
  "name": "QRossURL",
  "version": "1.0",

  "description": "Generates a QR code to open the page on another device.",
  "icons": {
    "48": "icons/crossshare-48.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/crossshare-32.png",
    "default_title": "QRossURL",
    "default_popup": "popup/generateQR.html"
  }

}
